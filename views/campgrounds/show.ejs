<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead"><h2>Camp Compass</h2></p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail">

                <img class="img-responsive" src="<%= campground.image %>">
                
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h3><a><%= campground.name %></a></h3>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted by <%= campground.author.username %></em>
                    </p>
                    <% if (currentUser && campground.author.id.equals(currentUser._id)) { %>
                        <a class="btn edit-btn" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form id="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                           <a class="btn delete-btn">Delete</a> 
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                
                <div class="text-right">
                    <a class="btn comment-btn" href="/campgrounds/<%= campground._id %>/comments/new"> Add New Comment</a>
                </div>
                
                <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <b><%= comment.author.username %></b> 
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <hr>
                        </div>
                    </div>
                <% }); %>
            </div>
                
        </div>
    </div>

</div>

<% include ../partials/footer %>